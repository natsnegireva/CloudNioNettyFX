<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controller">
    <center>
        <HBox>
            <TextArea fx:id="taChat" editable="false" focusTraversable="false" wrapText="true" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </TextArea>
            <TextArea fx:id="taUserList" editable="false" minWidth="100" prefWidth="200" />
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </HBox>
    </center>
    <bottom>
        <HBox>
            <TextField fx:id="tfMessage" prefHeight="48.0" prefWidth="424.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </TextField>
            <Button onAction="#sendButtonAction" prefHeight="48.0" prefWidth="147.0" text="ОТПРАВИТЬ" textFill="#3a54b2">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <font>
                    <Font size="14.0" />
                </font></Button>
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
    </padding>
</BorderPane>
